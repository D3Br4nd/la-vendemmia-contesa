# Environment Variables for La Vendemmia Contesa
# Copy this file to .env and customize for your environment

# ===== BASIC SETTINGS =====

# Domain Configuration
NGINX_HOST=rm.prolocoventicano.com
NGINX_PORT=80

# Timezone
TZ=Europe/Rome

# Game Configuration
GAME_NAME="La Vendemmia Contesa"
GAME_VERSION=1.0

# ===== DEVELOPMENT SETTINGS =====

NODE_ENV=production
DEBUG=0

# Development Port (only for dev mode)
# DEV_PORT=8080

# ===== CORS SETTINGS =====
# Allowed origins for API calls
ALLOWED_ORIGINS=https://rm.prolocoventicano.com,http://rm.prolocoventicano.com,http://localhost,http://localhost:8080

# ===== SECURITY SETTINGS =====

# Rate limiting (small audience - 10 max users)
MAX_SCORES_PER_IP=3
SCORE_COOLDOWN=30

# File upload limits
MAX_FILE_SIZE=1M

# ===== LOGGING =====
LOG_LEVEL=INFO
LOG_TO_FILE=true

# ===== GAME FEATURES =====
LEADERBOARD_ENABLED=true
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="Il gioco Ã¨ temporaneamente in manutenzione. Torna presto!"

# ===== BRANDING =====
GAME_TITLE="La Vendemmia Contesa"
GAME_SUBTITLE="Natale 2025 - Rosso Macchiato"
ORGANIZATION="Comitato Per Aspera ad Astra - ProLoco Venticano"
